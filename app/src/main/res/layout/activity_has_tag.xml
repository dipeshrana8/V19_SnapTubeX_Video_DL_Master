<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EFF1F5"
    android:orientation="vertical"
    tools:context=".spalsh.HasTagActivity">

    <include
        android:id="@+id/toolbarLayout"
        layout="@layout/toolbar_layout" />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="@dimen/_5sdp"
        android:layout_weight="1"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="vertical">

            <FrameLayout
                android:id="@+id/frameNative"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"

                android:layout_marginHorizontal="@dimen/_10sdp"
                android:layout_marginVertical="@dimen/_5sdp"
                android:minHeight="@dimen/_180sdp"
                android:visibility="visible" />

            <FrameLayout
                android:id="@+id/frameAesthetic"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_10sdp"
                android:layout_marginVertical="@dimen/_10sdp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"

                    android:src="@drawable/img_hash_tag" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:weightSum="5">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"

                        android:orientation="horizontal"
                        android:weightSum="2">

                        <View
                            android:id="@+id/btnHappy"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"

                            />

                        <View
                            android:id="@+id/btnLove"

                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"


                            />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <View
                            android:id="@+id/btnSad"

                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"


                            />

                        <View
                            android:id="@+id/btnFriendship"

                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"


                            />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <View
                            android:id="@+id/btnAngry"

                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"


                            />

                        <View
                            android:id="@+id/btnMotivation"

                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"


                            />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <View
                            android:id="@+id/btnSelfLoved"

                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"


                            />

                        <View
                            android:id="@+id/btnAesthetic"

                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"


                            />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <View
                            android:id="@+id/btnAlone"

                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"


                            />

                        <View
                            android:id="@+id/btnAttitude"

                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"


                            />


                    </LinearLayout>


                </LinearLayout>
            </FrameLayout>


        </LinearLayout>
    </ScrollView>


</LinearLayout>